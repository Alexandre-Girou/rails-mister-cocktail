<h1><%= @cocktail.name %></h1>

<% if @cocktail.photo.attached? %>
  <%= cl_image_tag(@cocktail.photo.key) %>
<% end %>

<% @cocktail.ingredients.each do |i| %>
  <p>Ingredient : <%= i.name %></p>
<% end %>

<% @cocktail.doses.each do |dose| %>
  <p>Dose : <%= dose.description %><%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
    <i class="fa fa-trash destroy_dose"></i>
  <% end %></p>
<% end %>


<%= link_to "Add ingredients with doses +", new_cocktail_dose_path(@cocktail), class:"btn btn-primary" %>
<%= link_to "Back to Cocktails", cocktails_path, class:"btn btn-primary" %>
