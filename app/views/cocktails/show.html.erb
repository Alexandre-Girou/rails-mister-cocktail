<h1><%= @cocktail.name %></h1>

<% @cocktail.ingredients.each do |i| %>
  <p>Ingredient : <%= i.name %></p>
<% end %>

<%= link_to "Add ingredients with doses +",  %>

<% @cocktail.doses.each do |dose| %>
  <p>Dose : <%= dose.description %></p>
<% end %>

